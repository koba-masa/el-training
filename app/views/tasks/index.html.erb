<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <tr>
        <th rowspan="2">概要</th>
        <th rowspan="2">優先度</th>
        <th rowspan="2">ステータス</th>
        <th colspan="2">締め切り</th>
        <th colspan="2"></th>
      </tr>
    </tr>
    <tr>
      <th>日付</th>
      <th>時刻</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline_date.strftime("%Y/%m/%d") %></td>
        <% if task.deadline_time.blank? %>
        <td>-</td>
        <% else %>
          <td><%= task.deadline_time.strftime("%H:%M") %></td>
        <% end %>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

